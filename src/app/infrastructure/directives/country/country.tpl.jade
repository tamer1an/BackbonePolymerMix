    md-selected-item="countyCtrl.clientCurrency.selectedItem"
    md-selected-item-change="countyCtrl.selectedCurrencyChange(item, countyCtrl.clientCurrency.name)"
    md-search-text="countyCtrl.clientCurrency.searchText"
    md-search-text-change="countyCtrl.searchTextChange(countyCtrl.clientCurrency.searchText)"
    md-items="item in countyCtrl.currencyQuerySearch(countyCtrl.clientCurrency, countyCtrl.clientCountry.selectedItem)"
    md-item-text="item.currencyCode"
    md-min-length="0"
    ng-if="!countyCtrl.clientCurrency.isDisabled"
    )
      md-item-template
        span.left-value(md-highlight-text="countyCtrl.clientCurrency.searchText" md-highlight-flags="^i") {{item.currencyCode}}
      md-not-found No matches found ...
    .csc-displayfield(
    ng-bind='countyCtrl.clientCurrency.selectedItem.currencyCode'
    ng-if="countyCtrl.clientCurrency.isDisabled"
    )

