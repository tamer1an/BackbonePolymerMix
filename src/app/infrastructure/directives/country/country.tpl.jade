div(layout="column").md-margin
  //  Client Country field
  .row(layout="row" layout-wrap)
    label(flex="35") Client Country
    md-autocomplete.csc-autocomplete( flex="50" placeholder="Select Client Country"
    ng-disabled="countyCtrl.clientCountry.isDisabled"
    md-selected-item="countyCtrl.clientCountry.selectedItem"
    md-selected-item-change="countyCtrl.selectedCountryChange(item, countyCtrl.clientCountry)"
    md-search-text="countyCtrl.clientCountry.searchText"
    md-search-text-change="countyCtrl.searchTextChange(countyCtrl.clientCountry.searchText)"
    md-items="item in countyCtrl.countryQuerySearch(countyCtrl.clientCountry.searchText)"
    md-item-text="item.countryName"
    md-min-length="0"
    )
      md-item-template
        span.left-value(md-highlight-text="countyCtrl.clientCountry.searchText" md-highlight-flags="^i") {{item.countryName}}
        span.right-value(md-highlight-text="countyCtrl.clientCountry.searchText" md-highlight-flags="^i") {{item.countryCode}}
      md-not-found No matches found ...
    .csc-displayfield {{countyCtrl.clientCountry.selectedItem.countryCode}}

