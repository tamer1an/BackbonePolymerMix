        include polymer-components.jade

        body.UP(ng-app='app', ng-controller='AuthController', layout='column', ng-style='textSize')
            md-toolbar
                .md-toolbar-tools
                    md-button.UP_head_hamburger.md-primary(ng-click='toggleLeft()', hide-gt-md) â‰¡
                    h2.UP_head_logoText.md-flex Boat

            div(layout='column',  ng-cloak, flex="100")
                section(layout='row', flex)
                    md-sidenav.md-sidenav-left.md-whiteframe-z2(
                        md-component-id='left',
                        md-is-locked-open="$mdMedia('gt-md')"
                    )
                        md-content(ng-controller='LeftCtrl')
                            md-button.UP_navLeft_close.md-primary(ng-click='close()', hide-gt-md) x

                            md-list.UP_navLeft_list(ng-cloak)
