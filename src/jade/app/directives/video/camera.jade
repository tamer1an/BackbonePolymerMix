extends dialog

block content
    div.dialog-content.alarmVideo( layout="row", layout-wrap )
        div( flex="70")
            div( video-player, source="selected" )

        div( layout-padding, flex="30" )
            md-content.videoListBox(layout="column")
                md-list.videoList
                    md-item
                        md-button.md-raised.md-primary( ng-click="videoOnDemand()",
                                   ng-disabled="isVideoOnDemandInProgress" )
                            | {{ 'Video On Demand' | translate }}

                    div( video-preview,
                         selected="selected",
                         ng-preview="videoOnDemandPreview",
                         ng-click="select(videoOnDemandPreview)",
                         ng-if="videoOnDemandPreview" )

                    div( video-preview,
                         ng-preview="preview",
                         selected="selected",
                         ng-click="select(preview)",
                         ng-repeat="preview in previews" )